@using Microsoft.AspNetCore.Identity
@model IdentityUser

<h2>Kullanıcı Düzenle</h2>

<form asp-action="Edit" method="post">
    <div>
        <label>Kullanıcı Adı</label>
        <input asp-for="UserName" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>
    <button type="submit">Güncelle</button>
</form> 